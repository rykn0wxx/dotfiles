#!/usr/bin/env bash

alias _="sudo"

# Git Helpers
alias g="git"
alias ga="git add ."
alias gm="git commit -a -m"
alias gcr="git clone --depth 1"

# Rails Helpers
alias rdb="rails db:migrate"

colorflag="--color=always"
export LS_COLORS='no=00:fi=00:di=01;31:ln=01;36:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.bz2=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.avi=01;35:*.fli=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.ogg=01;35:*.mp3=01;35:*.wav=01;35:'

# Listings
alias lss="ls -lF ${colorflag}"
alias ll="ls -lhAF ${colorflag}"
alias ls="command ls -ah ${colorflag}"
alias ldr="ls -lAh -d */"
alias lf="ls -lAh | egrep -v '^d'"

alias grep="grep --color=auto"
alias fgrep="fgrep --color=auto"
alias egrep="egrep --color=auto"

# Find large files and directory
alias large_files="find -type f -exec du -Sh {} + | sort -rh | head -n 20"
alias large_dir="du -Sh | sort -rh | head -n 20"

alias ap="sudo apt --no-install-recommends --no-install-suggests install"
alias p2="python2 -m pip install"
alias p3="python3 -m pip install"

alias gcp="ssh -i /root/.ssh/google_compute_engine root@34.69.43.176"
